
<%= form_for(:task, :url => project_tasks_path(@project, @task)) do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </p>

	<p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'form-control' %>
  </p>

  <p>
    <%= f.label :member %><br>
    <%= f.collection_select(:member, @project.members.all, :name, :name ) %>
  </p>

  <p>
    <%= f.submit :submit%>
  </p>
  
<% end %>