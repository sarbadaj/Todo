<h1>
		Tasks
</h1>
<table class="table">
	<thead>
		<tr>
			<th>Task</th>
			<th>Body</th>
			<th>Assign Member</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @project.tasks.each do |task| %>
			<tr class="active">
				<td><%= task.title %></td>
				<td><%= task.body %></td>
				<td><%= task.member %></td>
				<td><%= link_to image_tag("delete.jpg", :alt => "Delete", :width => 25, :height => 25), [task.project, task],
								method: :delete,
								data: {confirm: 'Are you sure?'} %>
			</tr>
		<%end%>
	</tbody>
</table>