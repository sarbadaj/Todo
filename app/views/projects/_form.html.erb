<% if params[:action] == 'edit' %>
  <% url = update_project_path(@user, @project) %>
  <% method = :put %>
  <% else %>
  <% url = create_project_path(@user) %>
  <% method = :post %>
  <% end %>
<%= form_for(:project, :url => url, :html => {:method => method} ) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, :class => 'form-control' %>
  </p>
 
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body, :class => 'form-control' %>
  </p>
 
  <p>
    <%= f.submit :submit, :class=>'btn btn-default' %>
  </p>
<% end %>

