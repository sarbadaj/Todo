
<div class="container">
	<h1>Projects</h1>

	<div>
		<button class="btn btn-default btn-lg" id="show">
			Add Project
		</button>
	</div>

	<div id="add_project" class="add_proj form-group">
		<%= render "projects/form" %>
	</div>

	<% @user.projects.each do |project| %>

	  <div class="box">
		  <div class="project_contain btn btn-default btn-l" id="task">
			  <h4>
			  	<%= project.title %>
			  </h4>
			 
			  <p>
			    <%= project.body %>
			  </p>
			</div>
		  <div class="project_action">

			  <button>
		  		<%= link_to image_tag("delete.jpg", :alt => "Delete", :width => 25, :height => 25), [project.user, project],
		               method: :delete,
		               data: { confirm: 'Are you sure?' } %>
				</button>	
				<%= link_to image_tag("edit.jpg", :alt => "Edit", :width => 25, :height => 25), edit_user_project_path(current_user.id, project.id), :class => "btn btn-default" %>
			</div>		

	  </div>

	<% end %>

</div>

