
<div class="container">
	<h1>Projects</h1>

	<div>
		<button class="btn btn-default btn-lg" id="show">
			Add Project
		</button>
	</div>

	<div id="add_project" class="add_proj form-group">
		<%= render "projects/form" %>
	</div>
	
	<% @user.projects.each do |project| %>

	  <button class="btn btn-default btn-lg">
		  <p>
		  <%= project.title %>
		  </p>
		 
		  <p>
		    <%= project.body %>
		  </p>

		  <p>
	  		<%= link_to 'Destroy Added Project', [project.user, project],
	               method: :delete,
	               data: { confirm: 'Are you sure?' } %>
			</p>

	  </button>

	<% end %>
	

</div>

