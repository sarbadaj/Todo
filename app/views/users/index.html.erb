
<div class="container">
	<h1>Projects</h1>

	<div>
		<button class="btn btn-default btn-lg" id="show">
			Add Project
		</button>
	</div>

	<div id="add_project" class="add_proj form-group">
		<%= render "projects/form" %>
	</div>
	
	<% @user.projects.each do |project| %>

	  <button class="btn btn-default btn-lg">
		  <p>
		  <%= project.title %>
		  </p>
		 
		  <p>
		    <%= project.body %>
		  </p>
	  </button>

	<% end %>
	

</div>

